{
    "name": "cmpayments/crate",
    "description": "A tool to simplify building PHARs.",
    "keywords": ["phar"],
    "homepage": "https://github.com/cmpayments/crate",
    "license": "MIT",
    "authors": [
        {
            "name": "Bas Peters",
            "email": "bp@cm.nl",
            "homepage": "https://github.com/baspeters"
        },
        {
            "name": "Kevin Herrera",
            "email": "kevin@herrera.io",
            "homepage": "http://kevin.herrera.io"
        }
    ],
    "support": {
        "issues": "https://github.com/cmpayments/crate/issues"
    },
    "require": {
        "php": ">=5.3.3",
        "herrera-io/annotations": "~1.0",
        "cmpayments/crate-lib": "~1.0",
        "herrera-io/json": "~1.0",
        "kherge/amend": "~3.0",
        "justinrainbow/json-schema": "~1.3",
        "phine/path": "~1.0",
        "phpseclib/phpseclib": "~2.0",
        "symfony/console": "~2.1",
        "symfony/finder": "~2.1",
        "symfony/process": "~2.1"
    },
    "require-dev": {
        "herrera-io/phpunit-test-case": "1.*",
        "mikey179/vfsStream": "1.1.0",
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "ext-openssl": "To accelerate private key generation."
    },
    "autoload": {
        "psr-0": {
            "CmPayments\\Crate": "src/lib"
        }
    },
    "bin": [
        "bin/crate"
    ],
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "src/vendors"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
